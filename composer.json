{
    "name": "eusonlito/php-deploy",
    "keywords": ["php","deploy"],
    "description": "Simple PHP web panel to launch deploys",
    "license": "MIT",
    "authors": [
        {
            "name": "Lito",
            "email": "lito@eordes.com"
        }
    ],
    "config": {
        "vendor-dir": "src/vendor"
    },
    "require": {
        "php": ">=5.4",
        "gettext/gettext": "3.5.*",
        "eusonlito/laravel-meta": "2.*",
        "eusonlito/laravel-packer": "2.*"
    },
    "autoload": {
        "psr-4": {
            "WebDeploy\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php command clear-compiled",
            "composer dump-autoload --optimize",
            "php command compile"
        ],
        "post-update-cmd": [
            "php command clear-compiled",
            "composer dump-autoload --optimize"
        ]
    },
    "minimum-stability": "stable"
}
